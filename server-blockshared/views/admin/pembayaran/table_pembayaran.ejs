<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Invoice</th>
            <th>Email</th>
            <th>Nama User</th>
            <th>Nama Bank User</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < transaction.length; i++){ %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= transaction[i].invoice %></td>
            <td><%= transaction[i].custId.email %></td>
            <td><%= transaction[i].custId.fullName %></td>
            <td><%= transaction[i].payments.bankFrom %></td>
            <td><%= transaction[i].payments.status %></td>
            <td>
              <a href="/admin/pembayaran/<%= transaction[i].id %>"
                class="btn btn-success btn-circle btn-sm button-update">
                <i class="fas fa-eye"> </i>
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>